{
  "compilerOptions": {
    "module": "ES2020",                    // Specify ES module format
    "target": "ES2022",                    // Set target ECMAScript version
    "sourceMap": true,                      // Generate source maps
    "removeComments": true,                 // Remove comments from output
    "strict": true,                         // Enable strict mode
    "type": "module",                       // Enable ES module syntax
    "noImplicitAny": true,                  // Disallow implicit any types
    "strictNullChecks": true,               // Enable strict null checks
    "strictFunctionTypes": true,            // Enable strict checking of function types
    "strictBindCallApply": true,            // Enable strict bind, call, and apply methods
    "strictPropertyInitialization": true,   // Enable strict property initialization checks
    "noImplicitThis": true,                 // Disallow the use of this types that are always 'any'
    "alwaysStrict": true,                   // Parse in strict mode and emit 'use strict' for each source file
    "noImplicitReturns": true,              // Disallow not returning a value from every function
    "esModuleInterop": true,                // Enable compatibility with CommonJS modules
    "emitDecoratorMetadata": true,          // Emit design-type metadata for decorated declarations in source files
    "experimentalDecorators": true,         // Enable experimental support for decorators
    "moduleResolution": "node"              // Specify module resolution strategy
  },
  "exclude": ["node_modules"],              // Exclude node_modules directory
  "scripts": {
    "build": "tsc"                          // Add build script for TypeScript compilation
  }
}
